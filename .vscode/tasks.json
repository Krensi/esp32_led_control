{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Firmware",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceRoot}",
                "env": {
                    "PATH": "${config:esp_dev_env_path}:${env:PATH}",
                    "IDF_PATH": "${config:esp_idf_path}"
                }
            },
            "command": "idf.py build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Clean Project",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}",
                "env": {
                    "PATH": "${config:esp_dev_env_path}:${env:PATH}",
                    "IDF_PATH": "${config:esp_idf_path}"
                }
            },
            "command": "idf.py fullclean",
            "problemMatcher": []
        },
        {
            "label": "Manually 'clean' the `build/` Directory",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}",
                "env": {
                    "PATH": "${config:esp_dev_env_path}:${env:PATH}",
                    "IDF_PATH": "${config:esp_idf_path}"
                }
            },
            "command": "rm -rf build/",
            "problemMatcher": []
        },
        {
            "label": "Flash via ESP-Prog and OpenOCD",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}",
                "env": {
                    "PATH": "${config:esp_dev_env_path}:${env:PATH}",
                    "IDF_PATH": "${config:esp_idf_path}"
                }
            },
            "command": "openocd",
            "args": [
                "-f",
                "${workspaceFolder}/openocd/board_ft232h_esp32.cfg",
                "-c",
                "program_esp ${workspaceFolder}/build/${config:esp_build_target_name}.bin 0x10000 verify reset exit"
            ],
            "problemMatcher": []
        },
        {
            "label": "Flash via Serial",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}",
                "env": {
                    "PATH": "${config:esp_dev_env_path}:${env:PATH}",
                    "IDF_PATH": "${config:esp_idf_path}"
                }
            },
            "command": "idf.py -p ${config:esp_device_port} -b ${config:esp_device_baud} flash",
            "problemMatcher": []
        },
        {
            "label": "Monitor Serial Output",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}",
                "env": {
                    "PATH": "${config:esp_dev_env_path}:${env:PATH}",
                    "IDF_PATH": "${config:esp_idf_path}"
                }
            },
            "command": "idf.py -p ${config:esp_device_port} -b ${config:esp_device_baud} monitor",
            "problemMatcher": []
        },
        {
            "label": "Flash via Serial and Monitor Serial Output",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}",
                "env": {
                    "PATH": "${config:esp_dev_env_path}:${env:PATH}",
                    "IDF_PATH": "${config:esp_idf_path}"
                }
            },
            "command": "idf.py -p ${config:esp_device_port} -b ${config:esp_device_baud} flash monitor",
            "problemMatcher": []
        },
        {
            "label": "Open ESP-IDF Menu Config",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}",
                "env": {
                    "PATH": "${config:esp_dev_env_path}:${env:PATH}",
                    "IDF_PATH": "${config:esp_idf_path}"
                }
            },
            "command": "idf.py menuconfig",
            "problemMatcher": []
        },
    ]
}